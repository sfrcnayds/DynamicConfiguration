@model DynamicConfiguration.Web.ViewModels.ConfigurationViewModel
@{
    ViewData["Title"] = "Edit Configuration";
}
<h1>Edit Configuration</h1>
<form asp-action="Edit" method="post">
    @Html.ValidationSummary(
        false,
        "",
        new { @class = "text-danger" }
    )
    
    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Type"></label>
        <input asp-for="Type" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Value"></label>
        <input asp-for="Value" class="form-control"/>
    </div>
    <div class="form-group form-check">
        <input asp-for="IsActive" class="form-check-input"/>
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>
    <div class="form-group">
        <label asp-for="ApplicationName"></label>
        <input asp-for="ApplicationName" class="form-control"/>
    </div>
    <input type="hidden" asp-for="Version"></input>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
